<article class="post">
  <header>
    <div class="path">guest@blog.ixti.ru:~/<%= keys.include?(:category) ? category : '' %>$</div>
    <h2><%= title %></h2>
    <div class="extra"><%= extra_info date, tags %></div>
  </header>

  <section class="content">
    <%= body %>
  </section>

  <% if @config[:disqus] %>
  <hr />
  <section class="comments">
    <div id="disqus_thread"></div>
    <noscript><a href="http://<%= @config[:disqus] %>.disqus.com/?url=ref">View the discussion thread.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
    <script type="text/javascript">
    (function (js) {
      js.async = true;
      js.type = 'text/javascript';
      js.src = 'http://disqus.com/forums/<%= @config[:disqus] %>/embed.js'
      document.getElementsByTagName('head')[0].appendChild(js);
    })(document.createElement('script'));
    </script>
  </section>
  <% end %>
</article>

